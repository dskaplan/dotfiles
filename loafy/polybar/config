;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/xwindow]
  type = internal/xwindow
  format = <label>
  label = %{T3}%title:0:50:%%{T-}
  label-maxlen = 75

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/padding]
	type               = custom/text
	;content            = %{T5}%{T-}
	content    	   = %{T2}|%{T-}
	content-foreground = ${color.crazy}
  content-background = ${color.background}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/workspaces]

	type            = internal/i3
	format          = <label-state> <label-mode>
	index-sort      = true
	wrapping-scroll = false
	strip-wsnumbers = true


  label-mode = %mode%
	label-mode-background = ${color.foreground}
	label-mode-foreground = ${color.background}
	label-mode-padding    = 1.5

	label-focused            = %{T3}%name%%{T-}
	label-focused-background = ${color.alert}
	label-focused-foreground = ${color.crazy}
	label-focused-padding    = 1.25

	label-unfocused            = %{T2}%name%%{T-}
	label-unfocused-background = ${color.background}
	label-unfocused-foreground = ${color.foreground}
	label-unfocused-padding    = 1.25

	label-visible            = %{T2}%name%%{T-}
	label-visible-background = ${color.background}
	label-visible-foreground = ${color.foreground}
	label-visible-padding    = 1.25

	label-urgent            = %name%
	label-urgent-background = ${color.background}
	label-urgent-foreground = ${color.crazy}
  label-urgent-padding = 1.25


;;;;;;;;;;;;;;;;;;;;;

[module/date]
  type = internal/date
  interval = 30
  label = %{T2}%date% | %time%%{T-}
  time = %I:%M
  date = %A %d 
  time-alt = %H:%M
  date-alt = %B %d %Y

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/spotify]
  type = custom/script
  exec = ~/.config/polybar/spotify.sh
  click-right = playerctl previous 
  click-left = playerctl next 
  tail = true
  interval = 10

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/filesystem]
  type = internal/fs

  ; Mountpoints to display
  mount-0 = /
  interval = 100
  ; Display fixed precision values
  fixed-values = true

  ; Spacing between entries
  spacing = 0

  format-mounted = <label-mounted> 
  format-unmounted = <label-unmounted>
  label-mounted = %{T6}%{T-} %percentage_used%% 

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/pulseaudio]
  type = internal/pulseaudio
  use-ui-max = true

  format-volume = <label-volume>
  format-muted = <label-muted>

  label-volume =  %{T5}%{T-} %percentage%%
  label-muted = %{T5}%{T-}  
  label-muted-foreground = #ff0000


;;;;;;;;;;;;;;;;;;;;;;;;;

[module/weather]
  type = custom/script
  exec = ~/.config/polybar/openweathermap-simple.sh
  interval = 600
  label-font = 0
  click-left = exec firefox wunderground.com &

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/battery]
  type = internal/battery

  ; $ ls -1 /sys/class/power_supply/
  battery = BAT0
  adapter = AC

  ; Disable polling by setting the interval to 0.
  poll-interval = 0

  format-charging = <label-charging>
  format-discharging = <ramp-capacity> <label-discharging> 
  format-discharging-alt = <label-discharging-alt> 


  ; Available tokens:
  label-charging = +%percentage%%
  label-discharging = %percentage%%
  label-discharging-alt = at %percentage%%
  label-full = %{T6}%{T-}

  ramp-capacity-0 = 
  ramp-capacity-1 = 
  ramp-capacity-2 = 
  ramp-capacity-3 = 
  ramp-capacity-4 = 

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/network]
  type = internal/network
  interface = wlp2s0

  ; Seconds to sleep between updates
  interval = 30
  ; Test connectivity every Nth update
  ping-interval = 0

  format-connected = <label-connected>
  format-connected-alt = <label-connected-alt>
  format-disconnected = <label-disconnected>

  label-connected-alt = %essid% 
  label-connected =  %signal%% 
  label-disconnected = -


