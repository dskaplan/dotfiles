[global/wm]
  margin-top = 0
  margin-bottom = 0

[color]
  white = #fff
  background = ${xrdb:color0:#222}
  foreground = ${xrdb:color15:#222}
  foreground-alt = ${xrdb:color8:#222}
  primary = ${xrdb:color1:#222}
  secondary = ${xrdb:color2:#222}
  alert = ${xrdb:color3:#222}
  ternary = ${xrdb:color5:#222}
  ; now I'm just making shit up
  quadary = ${xrdb:color7:#222}
  crazy = ${xrdb:color14:#222}

[bar/barr]
  font-0 = Weather Icons:size=12;1
  font-1 = "Operator Mono Book:style=Medium"
  font-2 = "Operator Mono Book:style=Medium Italic,Italic"
  font-3 = "Graduate:size=12:style=Regular"
  font-4 = Font Awesome 5 Free:style=Solid:pixelsize=12

  override-redirect = false
  bottom = false
  fixed-center = true
  width = 100%
  height = 44
  dpi = 200
