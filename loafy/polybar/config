  padding-left = 2 
  padding-right = 2
  module-margin-left = 1
  module-margin-right = 1

  tray-position = right
  tray-padding = 0
  tray-maxsize = 16

  scroll-up = i3wm-wsnext
  scroll-down = i3wm-wsprev

  modules-left =  battery 
  modules-center = xwindow
  modules-right =  date

